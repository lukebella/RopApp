    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ropapplogo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="338dp"
            android:layout_height="460dp"
            android:layout_marginTop="156dp"
            android:background="@color/md_theme_surfaceContainer"
            android:elevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <ImageView
                android:id="@+id/logoRecommend"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ropapplogo" />

            <TextView
                android:id="@+id/textPregunta"
                android:layout_width="181dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="26dp"
                android:fontFamily="sans-serif-black"
                android:text="Que te apetece poner hoy?"
                android:textSize="22sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/recomendprenda"
                app:layout_constraintStart_toEndOf="@+id/logoRecommend"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/recomendprenda"
                android:layout_width="173dp"
                android:layout_height="202dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/recomendacionDelDia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/recomendprenda" />

            <TextView
                android:id="@+id/recomendacionDelDia"
                android:layout_width="252dp"
                android:layout_height="36dp"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="41dp"
                android:fontFamily="sans-serif-black"
                android:text="Recomendación del día"
                android:textAlignment="center"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/meGusta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/meGusta"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/button_default"
                android:text="Me gusta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/noMeGusta"
                app:layout_constraintTop_toBottomOf="@+id/recomendacionDelDia" />

            <Button
                android:id="@+id/noMeGusta"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/button_default"
                android:text="No me Gusta"
                app:layout_constraintEnd_toStartOf="@+id/meGusta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recomendacionDelDia" />
        </androidx.constraintlayout.widget.ConstraintLayout>

